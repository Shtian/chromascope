{
  "name": "chromascope",
  "version": "1.0.3",
  "author": "Stian Haga",
  "license": "ISC",
  "description": "Visually compare the same URL or DOM element in different browsers, from the safety of the command line.",
  "keywords": [
    "diff",
    "playwright",
    "cross-browser testing",
    "visual regression testing",
    "pixelmatch",
    "UI testing",
    "screenshot comparison",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Shtian/chromascope"
  },
  "homepage": "https://github.com/Shtian/chromascope#readme",
  "bugs": {
    "url": "https://github.com/Shtian/chromascope/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "bin": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "private": false,
  "scripts": {
    "dev": "vitest",
    "build": "tsup src/index.ts --format cjs,esm --minify",
    "lint": "rome check ./src",
    "format": "rome format ./src --write",
    "test": "vitest run",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "release": "pnpm run ci && changeset publish"
  },
  "peerDependencies": {
    "playwright-core": "^1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@types/node": "^18.15.11",
    "@types/pixelmatch": "^5.2.4",
    "@types/pngjs": "^6.0.1",
    "rome": "12.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3",
    "vitest": "^0.29.8"
  },
  "dependencies": {
    "@playwright/test": "^1.32.1",
    "cac": "^6.7.14",
    "ora": "^6.3.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.32.1",
    "pngjs": "^7.0.0"
  }
}
